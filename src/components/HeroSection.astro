---
import { getAllStories } from '../lib/stories';

// 获取所有故事
const stories = await getAllStories();
const storyCount = stories.length;
const imageCount = stories.reduce((acc, story) => acc + story.images.pages.length, 0);
---

<section class="relative py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto text-center">
    <!-- 主标题 -->
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-800 mb-6">
      <span class="inline-block">
        <span class="bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 bg-clip-text text-transparent">
          若兰的
        </span>
      </span>
      <br>
      <span class="text-3xl sm:text-4xl lg:text-5xl">AI故事书集锦</span>
    </h1>
    
    <!-- 副标题 -->
    <p class="text-lg sm:text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      欢迎来到6岁女孩若兰的神奇世界！这里收录了她创作的AI故事书，
      每一个故事都充满了童真与想象力。
    </p>
    
    <!-- 统计信息 -->
    <div class="flex flex-wrap justify-center gap-8 mb-12">
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-2 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full flex items-center justify-center text-white">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
          </svg>
        </div>
        <div class="text-2xl font-bold text-gray-800">{storyCount}</div>
        <div class="text-sm text-gray-500">精彩故事</div>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-2 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full flex items-center justify-center text-white">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="text-2xl font-bold text-gray-800">{imageCount}+</div>
        <div class="text-sm text-gray-500">精美插图</div>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-2 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center text-white">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM15.657 6.343a1 1 0 011.414 0A9.972 9.972 0 0119 12a9.972 9.972 0 01-1.929 5.657 1 1 0 11-1.414-1.414A7.971 7.971 0 0017 12c0-2.21-.895-4.21-2.343-5.657a1 1 0 010-1.414zm-2.829 2.828a1 1 0 011.415 0A5.983 5.983 0 0115 12a5.984 5.984 0 01-.757 2.829 1 1 0 01-1.415-1.414A3.987 3.987 0 0013 12a3.988 3.988 0 00-.172-1.171 1 1 0 010-1.415z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="text-2xl font-bold text-gray-800">有声</div>
        <div class="text-sm text-gray-500">阅读体验</div>
      </div>
    </div>
    
    <!-- 装饰性元素 -->
    <div class="relative">
      <div class="absolute -top-4 -left-4 w-8 h-8 text-pink-300 animate-bounce">
        <svg fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      </div>
      <div class="absolute -top-2 -right-6 w-6 h-6 text-purple-300 animate-pulse">
        <svg fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="absolute -bottom-2 left-8 w-5 h-5 text-blue-300 animate-ping">
        <svg fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

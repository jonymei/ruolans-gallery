---
import type { Story } from "../../../lib/stories";

export interface Props {
  story: Story;
}

const { story } = Astro.props;
---

<div class="mobile-story-reader">
  <!-- 粘性头部 -->
  <header class="mobile-header">
    <a href="/" class="back-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m12 19-7-7 7-7"/>
        <path d="M19 12H5"/>
      </svg>
      返回
    </a>
    <div class="header-title-container">
      <h1 class="story-title" title={story.config.title}>{story.config.title}</h1>
    </div>
    <div class="header-spacer"></div>
  </header>

  <!-- 故事内容 -->
  <main class="story-content">
    {story.config.pages.map((text, index) => (
      <section class="story-page-section" id={`page-${index + 1}`}>
        <div class="page-container">
          <!-- 音频播放器 -->
          {story.audios && story.audios.pages[index] && (
            <div class="audio-player-wrapper">
              <audio controls src={story.audios.pages[index]} preload="metadata" class="audio-player"></audio>
            </div>
          )}
          
          <!-- 文本内容 -->
          <div class="text-wrapper">
            <p class="story-text">{text}</p>
          </div>

          <!-- 图片内容 -->
          <div class="image-wrapper">
            <img 
              src={story.images.pages[index]} 
              alt={`插图 ${index + 1}`} 
              loading="lazy" 
              class="story-image"
            />
          </div>
        </div>
        <div class="page-number">
          - {index + 1} -
        </div>
      </section>
    ))}
  </main>
</div>

<style>
  .mobile-story-reader {
    background-color: #fdf2f8;
    color: #374151;
    overflow-x: hidden;
    width: 100%;
  }

  /* 头部 */
  .mobile-header {
    position: sticky;
    top: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(236, 72, 153, 0.2);
  }

  .back-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: #a855f7;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .header-title-container {
    flex-grow: 1;
    text-align: center;
    /* Ensure the title container is centered by placing it in the middle */
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 60%; /* Adjust width to prevent overlap */
  }

  .story-title {
    font-size: 1.1rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
  }

  .header-spacer {
    visibility: hidden;
  }

  /* 内容区域 */
  .story-content {
    padding: 1rem 0;
  }

  .story-page-section {
    margin-bottom: 2rem;
  }

  .page-container {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.95));
    backdrop-filter: blur(12px);
    margin: 0 1rem;
    border-radius: 20px;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.08), 
      0 4px 16px rgba(236, 72, 153, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(236, 72, 153, 0.12);
    overflow: hidden;
    position: relative;
  }

  /* 页面容器的装饰性背景 */
  .page-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 10% 20%, rgba(251, 207, 232, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 90% 80%, rgba(196, 181, 253, 0.12) 0%, transparent 40%);
    pointer-events: none;
    z-index: 0;
  }

  /* 确保内容在背景之上 */
  .audio-player-wrapper,
  .text-wrapper,
  .image-wrapper {
    position: relative;
    z-index: 1;
  }

  /* 音频播放器 */
  .audio-player-wrapper {
    padding: 1rem 1rem 0.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.6), rgba(248, 250, 252, 0.8));
    border-bottom: 1px solid rgba(236, 72, 153, 0.08);
    backdrop-filter: blur(4px);
  }

  .audio-player {
    width: 100%;
    height: 40px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
  }
  
  /* 文本 */
  .text-wrapper {
    padding: 0.5rem 1.5rem 1rem;
    position: relative;
  }

  .story-text {
    font-size: 1.1rem;
    line-height: 1.8;
    text-align: justify;
    text-indent: 2em;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.5));
    backdrop-filter: blur(8px);
    padding: 1.5rem;
    margin: 0.5rem 0;
    border-radius: 16px;
    border: 1px solid rgba(236, 72, 153, 0.15);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05), 0 2px 8px rgba(236, 72, 153, 0.08);
    position: relative;
    overflow: hidden;
  }

  /* 文字背景纹理效果 */
  .story-text::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 30%, rgba(251, 207, 232, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(249, 168, 212, 0.2) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(196, 181, 253, 0.2) 0%, transparent 50%);
    pointer-events: none;
    z-index: -1;
  }

  /* 图片 */
  .image-wrapper {
    width: 100%;
    line-height: 0; /* 移除图片下方的空隙 */
  }

  .story-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* 页码 */
  .page-number {
    text-align: center;
    margin-top: 1.5rem;
    color: #9ca3af;
    font-size: 0.9rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.3));
    backdrop-filter: blur(4px);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    border: 1px solid rgba(236, 72, 153, 0.1);
    display: inline-block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
</style>

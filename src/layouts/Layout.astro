---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "若兰的AI故事书集锦", 
  description = "为6岁女孩若兰创建的个人AI故事书展示网站，展示她创作的AI生成故事书作品。" 
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="若兰" />
    <meta name="keywords" content="AI故事书,儿童故事,若兰,故事集锦,有声书" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="zh_CN" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Noto+Sans+SC:wght@300;400;500;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Noto Sans SC', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: linear-gradient(135deg, #ffeef8 0%, #f0f4ff 100%);
    color: #333333;
    line-height: 1.6;
  }

  /* 自定义滚动条 */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(45deg, #ff9a9e, #fecfef);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(45deg, #ff6b6b, #ffa8d8);
  }

  /* 选中文本的颜色 */
  ::selection {
    background: #ffc0cb;
    color: #333;
  }

  /* 焦点样式 */
  :focus {
    outline: 2px solid #ff9a9e;
    outline-offset: 2px;
  }
</style>
